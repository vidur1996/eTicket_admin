<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_round_border_et"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label_trip_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Start Time :"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_trip_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_trip_start"
        android:text="start" />

    <TextView
        android:id="@+id/label_trip_end"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:text="End Time   :"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_trip_end"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/label_trip_end"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="end" />


    <TextView
        android:id="@+id/label_trip_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_end"
        android:text="From           :" />

    <TextView
        android:id="@+id/tv_trip_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/label_trip_from"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_end"
        android:text="from" />

    <TextView
        android:id="@+id/label_trip_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_from"
        android:text="To                :" />
    <TextView
        android:id="@+id/tv_trip_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/label_trip_to"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_from"
        android:text="to" />

    <TextView
        android:id="@+id/label_trip_collection"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collection  :" />

    <TextView
        android:id="@+id/tv_trip_collection"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/label_trip_collection"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="collection" />
    <TextView
        android:id="@+id/label_bus_conductor"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conductor :" />

    <TextView
        android:id="@+id/tv_trip_conductor"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/label_bus_conductor"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="conductor" />

    <TextView
        android:id="@+id/label_trip_passsenger_count"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_conductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger count :" />

    <TextView
        android:id="@+id/tv_trip_passsenger_count"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_trip_passsenger_count"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_conductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger count :" />

    <Button
        android:id="@+id/btn_trip_view_passengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:text="view \n passenger" />
</androidx.constraintlayout.widget.ConstraintLayout>