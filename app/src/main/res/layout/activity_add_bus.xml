<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_green"
    tools:context=".admin.AddBusActivity">
    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Bus"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_add_bus"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label_bus_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus ID"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_bus_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:inputType="none"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/label_bus_id"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/label_bus_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Number"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_bus_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_bus_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:inputType="number"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/label_bus_number"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/label_bus_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Owner"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_bus_number"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_bus_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/label_bus_owner"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/label_bus_conductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conductor Username"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_bus_owner"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_bus_conductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="45dp"

        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_bus_conductor"
        app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_create_bus"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/card_add_bus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Create Account For Bus "
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>